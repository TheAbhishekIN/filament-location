#!/usr/bin/env bash

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}ğŸ§ª Running Filament Location Package Tests${NC}"
echo "=================================================="

# Check if vendor directory exists
if [ ! -d "vendor" ]; then
    echo -e "${RED}âŒ Vendor directory not found. Running composer install...${NC}"
    composer install
fi

# Run code style check
echo -e "\n${YELLOW}ğŸ¨ Checking code style...${NC}"
if vendor/bin/pint --test; then
    echo -e "${GREEN}âœ… Code style check passed${NC}"
else
    echo -e "${RED}âŒ Code style check failed${NC}"
    echo -e "${YELLOW}ğŸ’¡ Run 'composer format' to fix code style issues${NC}"
    exit 1
fi

# Run static analysis
echo -e "\n${YELLOW}ğŸ” Running static analysis...${NC}"
if vendor/bin/phpstan analyse --no-progress; then
    echo -e "${GREEN}âœ… Static analysis passed${NC}"
else
    echo -e "${RED}âŒ Static analysis failed${NC}"
    exit 1
fi

# Run tests
echo -e "\n${YELLOW}ğŸš€ Running tests...${NC}"
if vendor/bin/pest --coverage; then
    echo -e "\n${GREEN}âœ… All tests passed!${NC}"
else
    echo -e "\n${RED}âŒ Some tests failed${NC}"
    exit 1
fi

echo -e "\n${GREEN}ğŸ‰ All checks completed successfully!${NC}" 